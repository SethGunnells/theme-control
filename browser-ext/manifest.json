{
  "name": "Theme Control - Browser Extension",
  "description": "Sets the browsers theme based on the theme-control application",
  "manifest_version": 2,
  "version": "1.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "themecontrol@ext",
      "strict_min_version": "50.0"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "nativeMessaging",
    "theme"
  ]
}